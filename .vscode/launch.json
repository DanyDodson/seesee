{
  "version": "0.2.0",
  "configurations": [
    // launch the pwa in chrome
    {
      "name": "App in Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/platforms/app"
    },
    // launch the sample service using node
    {
      "name": "Sample API",
      "request": "launch",
      "type": "pwa-node",
      "program": "${workspaceFolder}/services/sample/dist/index.js",
      "skipFiles": ["<node_internals>/**"],
    },
    // launch the users service using node
    {
      "name": "Users API",
      "request": "launch",
      "type": "pwa-node",
      "program": "${workspaceFolder}/services/users/dist/index.js",
      "skipFiles": ["<node_internals>/**"],
    },
    // launch the listings service using node
    {
      "name": "Listings API",
      "request": "launch",
      "type": "pwa-node",
      "program": "${workspaceFolder}/services/listings/dist/index.js",
      "skipFiles": ["<node_internals>/**"],
    },
    // debug a bash script
    {
      "name": "Bash Debug",
      "request": "launch",
      "type": "bashdb",
      "terminalKind": "integrated",
      "program": "${command:SelectScriptName}",
      "cwd": "${workspaceFolder}",
      "args": [],
    },
  ]
}