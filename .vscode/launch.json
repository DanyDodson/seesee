{
  "version": "0.2.0",
  "configurations": [

    // debug in docker
    {
      "type": "node",
      "request": "launch",
      "name": "Launch in Docker",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "docker-debug"],
      "port": 5858,
      "restart": true,
      "timeout": 60000,
      "localRoot": "${workspaceFolder}/dist",
      "remoteRoot": "/server",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**/*.js", ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },

    // launch the sample service using node
    {
      "name": "Sample API",
      "request": "launch",
      "type": "pwa-node",
      "program": "${workspaceFolder}/services/sample/dist/index.js",
      "skipFiles": ["<node_internals>/**"]
    },

    // launch the users service using node
    {
      "name": "Users API",
      "request": "launch",
      "type": "pwa-node",
      "program": "${workspaceFolder}/services/users/dist/index.js",
      "skipFiles": ["<node_internals>/**"]
    },

    // launch the listings service using node
    {
      "name": "Listings API",
      "request": "launch",
      "type": "pwa-node",
      "program": "${workspaceFolder}/services/listings/dist/index.js",
      "skipFiles": ["<node_internals>/**"]
    },

    // debug a bash script
    {
      "name": "Bash Debug",
      "request": "launch",
      "type": "bashdb",
      "terminalKind": "integrated",
      "program": "${command:SelectScriptName}",
      "cwd": "${workspaceFolder}",
      "args": []
    }
  ]
}