{
  "version": "0.2.0",
  "diagnosticLogging": true,
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "protocol": "inspector",
      "port": 9229,
      "restart": true,
      "sourceMaps": true,
      "smartStep": true,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/src/app",
      "timeout": 50000,
      "showAsyncStacks": true,
      "sourceMapPathOverrides": {
        "/usr/src/app/*": "${workspaceFolder}/*"
      },
      "linux": {
        "args": [
          "${env:USERNAME}",
          "${workspaceFolder}/app.js"
        ],
      },
      "skipFiles": [
        "/usr/src/app/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    }
  ]
}